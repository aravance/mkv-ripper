package workflow

import (
	"github.com/aravance/mkv-ripper/model"
	"github.com/aravance/mkv-ripper/view/layout"
)

templ Show(workflow *model.Workflow) {
	@layout.Base() {
		<h1>{ workflow.Label }</h1>
		<form hx-post="?" hx-target="#response">
			<label for="name">Name <input type="text" name="name"/></label>
			<label for="year">Year <input type="text" name="year"/></label>
			<input type="submit" value="Submit"/>
		</form>
		<div id="response"></div>
	}
}
